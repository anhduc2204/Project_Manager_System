<main>
    <div class="header" id="header">
        <div class="header-actions">
            <button class="btn btn-primary" onclick="openModal()">+ Add Project</button>
            <img src="images/bell-regular.svg" alt="Notifications" style="cursor: pointer;" width="25px" height="25px">
            <img src="images/circle-user-solid.svg" alt="Profile" style="cursor: pointer;" width="25px" height="25px">
        </div>
    </div>

    <div class="project-info">
        <h2>Project Name</h2>
        <div class="project-details">
            <p>PM: User</p>
            <p>Description: ......</p>
        </div>

        <div class="members-section">
            <div class="members-header">
                <h3>Member:</h3>
                <button class="btn btn-primary">+ Add member</button>
            </div>

            <div class="member-list" id="memberList">
                <!-- Members will be added here dynamically -->
            </div>
        </div>
    </div>
</main>


<div id="modal" class="modal-overlay" style="display: none;">
        <div class="modal">
            <div class="modal-header">
                <h2 class="modal-title">Project Details</h2>
                <button class="close-button" onclick="closeModal()">&times;</button>
            </div>
            <form id="projectForm" onsubmit="handleSubmit(event)">
                <div class="form-group">
                    <label for="projectName">Project Name:</label>
                    <input 
                        type="text" 
                        id="projectName" 
                        name="projectName" 
                        placeholder="Input text"
                        required
                    >
                </div>

                @* <div class="form-group"> *@
                @*     <label for="pm">PM:</label> *@
                @*     <select id="pm" name="pm" required> *@
                @*         <option value="">Dropdown</option> *@
                @*         <option value="john">John Doe</option> *@
                @*         <option value="jane">Jane Smith</option> *@
                @*         <option value="mike">Mike Johnson</option> *@
                @*     </select> *@
                @* </div> *@

                <div class="form-row">
                    <div class="form-group" style="flex: 1;">
                        <label for="startDate">Start Date:</label>
                        <input 
                            type="date" 
                            id="startDate" 
                            name="startDate"
                            required
                        >
                    </div>
                    <div class="form-group" style="flex: 1;">
                        <label for="endDate">End Date:</label>
                        <input 
                            type="date" 
                            id="endDate" 
                            name="endDate"
                            required
                        >
                    </div>
                </div>

                <div class="form-group">
                    <label for="status">Status:</label>
                    <select id="status" name="status" required>
                        <option value="">Dropdown</option>
                        <option value="planning">Planning</option>
                        <option value="in-progress">In Progress</option>
                        <option value="completed">Completed</option>
                        <option value="on-hold">On Hold</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea 
                        id="description" 
                        name="description" 
                        placeholder="Input text"
                    ></textarea>
                </div>

                <button class="save-button" onclick="createProject()">Save</button>
            </form>
        </div>
    </div>




<script>
        // Sample member data
        const members = [
            { id: 1, name: 'Username' },
            { id: 2, name: 'Username' },
            { id: 3, name: 'Username' },
            { id: 4, name: 'Username' },
            { id: 5, name: 'Username' },
            { id: 6, name: 'Username' },
            { id: 7, name: 'Username' },
            { id: 8, name: 'Username' },
            { id: 9, name: 'Username' },
        ];

        const memberList = document.getElementById('memberList');

        // Render members
        function renderMembers() {
            memberList.innerHTML = members.map(member => `
                <div class="member-item">
                    <div class="member-info">
                        <div class="avatar"></div>
                        <span>${member.name}</span>
                    </div>
                    <button class="btn btn-delete" onclick="deleteMember(${member.id})">Delete</button>
                </div>
            `).join('');
        }

        // Delete member function
        function deleteMember(id) {
            const index = members.findIndex(m => m.id === id);
            if (index !== -1) {
                members.splice(index, 1);
                renderMembers();
            }
        }

        // Initial render
        renderMembers();
       
    </script>
</body>
</html>